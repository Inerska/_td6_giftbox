<!DOCTYPE html>
<html>
<head>
    <title></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="grid-container">

<header class="bg-gray-800 py-4 px-8 flex items-center justify-between">
    <div class="text-white font-bold text-xl"><a href="{{ url_for("accueil") }}">MyGiftBox</a></div>

    <div class="flex items-center">
        <p class="text-white">{{ user.email }}</p>
        {% if service.isAuthenticated() %}
            <a href="{{ url_for('auth.signout') }}"
               class="bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded mr-2">DÃ©connexion</a>
        {% else %}
            <a href="{{ url_for('auth.signin') }}"
               class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded mr-2">Connexion</a>
            <a href="{{ url_for('auth.signup') }}"
               class="bg-green-500 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded mr-2">Inscription</a>
        {% endif %}
        <div class="relative">
            <button class="text-white font-semibold hover:fill-gray-600">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd"
